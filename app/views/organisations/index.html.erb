<table>
  <% if @organisations.length == 0 %>
    <tr>
      <td>There is no organisation. Create one with the form below</td>
    </tr>
  <% else %>

    <% @organisations.each do |organisation| %>
      <%= render "organisations", organisation: organisation %>
    <% end %>

  <% end %>


</table>


<%# form to create organization %>


<%= form_for(@organisation) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :hourly_rate %>
  <%= f.number_field :hourly_rate, step: 0.01 %>
  <%= f.submit %>
<% end %>
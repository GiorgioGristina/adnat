<div class="container">
  <section class="organisation-container">
    <%= link_to 'edit user detail',  edit_user_registration_path, class: "user-details" %>
      <% if @organisations.length == 0 %>
          <div>There is no organisation. Create one with the form below</div>
      <% else %>
    `<table>
        <% @organisations.each do |organisation| %>
          <%= render "organisations", organisation: organisation %>
        <% end %>

      </table>
      <% end %>


  </section>


  <%# form to create organization %>

  <section class="container-form">
    <%= form_for(@organisation)   do |f| %>
      <div class= "input-field">
        <%= f.label :name, class: "label" %>
        <%= f.text_field :name, placeholder: "Dishoom", class: "input" %>
      </div>
      <div class= "input-field">
        <%= f.label :hourly_ratename, class: "label" %>
        <%= f.number_field :hourly_rate, step: 0.01, placeholder: "13.50", class: "input" %>
      </div>
      <div class= "input-field">
        <%= f.submit  class: 'button' %>
      </div>
    <% end %>
  </section>
</div>
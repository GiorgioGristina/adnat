<%= form_for(@organisation) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :hourly_rate %>
  <%= f.number_field :hourly_rate, step: 0.01 %>
  <%= f.submit %>
<% end %>

<%= link_to "Delete", organisation_path(@organisation), data: {turbo_method: :delete, turbo_confirm: "Are you sure to delete the organisation?"} %>
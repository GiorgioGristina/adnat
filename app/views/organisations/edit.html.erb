<div class="container">
  <section class="container-form">
    <%= form_for(@organisation) do |f| %>
      <div class= "input-field">
        <%= f.label :name, class: "label" %>
        <%= f.text_field :name, class: "input" %>
      </div>
      <div class= "input-field">
        <%= f.label :hourly_rate, class: "label" %>
        <%= f.number_field :hourly_rate, step: 0.01, class: "input" %>
      </div>
      <div class= "input-field">
        <%= f.submit class: 'button' %>
      </div>
    <% end %>

    <%= link_to "Delete", organisation_path(@organisation), data: {turbo_method: :delete, turbo_confirm: "Are you sure to delete the organisation?"} %>
  </section>
</div>